@{
    ViewData["Title"] = "Game";
}
@model IEnumerable<NeatDiggers.GameServer.Room>
<form action="" class="my-3">
    <div class="row">
        <div class="col-12 px-3">
            <img class="img-fluid w-100 " src="~/img/match-cap.jpg" alt="First slide">
        </div>
        <div class="col pt-1">
            <button type="button" class="col btn btn-success" data-toggle="modal" data-target="#CreateLobbyModal">Create lobby</button>
        </div>
    </div>
    <div class="row form-group pt-3">
        <form class="form-inline" method="post">
            <div class="col-2">
                <input class="form-control" type="search" id="codeInput" name="code" placeholder="Enter lobby code" aria-describedby="lobby-code" required="True">
            </div>
            <div class="col-4">
                <input class="form-control" type="search" id="nameInput" name="name" placeholder="Enter name" aria-describedby="lobby-code" value="Player" required="True">
            </div>
            <div class="col-3">
                <button type="submit" id="watchButton" class="col btn btn-info" asp-controller="Game" asp-action="Watch">Watch</button>
            </div>
            <div class="col-3">
                <button type="submit" id="watchButton" class="col btn btn-primary" asp-controller="Game" asp-action="PlayersLobby">Play</button>
            </div>
        </form>
    </div>
</form>
<hr>
@foreach (var room in Model)
{
    @if (room.IsStarted)
    {
        <div class="border">
            <img src="" alt="map"> | @room.Code | @room.Players.Count | @room.Round | Deck| <a class="btn btn-info" asp-route-code="@room.Code" asp-controller="Game" asp-action="Watch">Watch</a>
        </div>
    }
}
<!-- Modal -->
<div class="modal fade" id="CreateLobbyModal" tabindex="-1" aria-labelledby="CreateLobbyModal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="CreateLobbyModal">Create lobby</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <h4>Select Map</h4>
                        <select class="form-control">
                            <option>Map 1</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <h4>Select Deck</h4>
                        <select class="form-control">
                            <option>Deck 1</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form class="form-inline" asp-controller="Game" asp-action="CreateLobby" method="post">
                    <button class="btn btn-primary" type="submit">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>