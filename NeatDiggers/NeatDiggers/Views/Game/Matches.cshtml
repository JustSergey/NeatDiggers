@{
    ViewData["Title"] = "Game";
}
<form action="" class="my-3">
    <div class="row">
        <div class="col-12 px-3">
            <img class="img-fluid w-100 " src="~/img/match-cap.jpg" alt="First slide">
        </div>
        <div class="col pt-1">
            <button type="submit" class="col btn btn-success">Create lobby</button>
        </div>
    </div>
    <div class="row form-group pt-3">
        <div class="col-6">
            <input type="text" class="form-control" placeholder="Enter lobby code" aria-describedby="lobby-code">
        </div>
        <div class="col-3">
            <button type="submit" class="col btn btn-primary">Сonnect</button>
        </div>
        <div class="col-3">
            <button type="submit" class="col btn btn-info">Watch</button>
        </div>
    </div>
</form>
<hr>
<div class="row">
    <div class="col-2">
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Code</h5>
                <p class="card-text">Players: 4</p>
                <p>Round: 17</p>
                <a href="#" class="btn btn-info">Watch</a>
            </div>
        </div>
    </div>
</div>